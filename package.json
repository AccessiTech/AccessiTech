{
  "name": "@accessitech/homepage",
  "private": false,
  "version": "2.3.2",
  "type": "module",
  "engines": {
    "node": ">=v20.19.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "*.{js,jsx,ts,tsx,json,css,scss,md,html}": "prettier --write"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "vite",
    "start": "yarn dev",
    "static": "tsx ../vite-ssg/generate",
    "rss": "node ./scripts/rss.js",
    "rss:prod": "node ./scripts/rss.js && cp public/rss.xml docs/rss.xml",
    "sitemap": "node ./scripts/sitemap.js",
    "sitemap:prod": "node ./scripts/sitemap.js && cp public/sitemap.xml docs/sitemap.xml",
    "tsc": "tsc",
    "pre:build": "yarn rss && yarn sitemap && tsc",
    "build": "tsc && vite build",
    "build:prod": "yarn pre:build && vite build && yarn post:build",
    "prod:build": "build:prod",
    "post:build": "mkdir docs/blog && cp CNAME docs/CNAME && yarn static",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives",
    "lint:strict": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "coverage:badge": "yarn test:coverage && node scripts/update-coverage-badge.js",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "format:all": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,scss,md,html}\" --ignore-path .prettierignore"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.5",
    "@vitejs/plugin-react": "^4.3.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-redux": "^8.1.2",
    "react-router-dom": "^6.15.0",
    "react-social-icons": "^6.22.0",
    "reduxjs-toolkit-persist": "^7.2.1",
    "remark-directive": "^4.0.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.10.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^18.2.7",
    "@types/react-helmet": "^6.1.11",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react-swc": "^3.8.1",
    "bootstrap": "^5.3.3",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "fast-xml-parser": "^5.0.9",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "jest-watch-typeahead": "^3.0.1",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "react-bootstrap": "^2.8.0",
    "sass": "^1.86.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  }
}
